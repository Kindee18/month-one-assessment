# AWS Configuration
aws_region = "us-east-1"

# Instance Types
bastion_instance_type = "t3.micro"
web_instance_type     = "t3.micro"
db_instance_type      = "t3.small"

# Key Pair Configuration
key_pair_name   = "techcorp-key"
public_key_path = "~/.ssh/id_rsa.pub"

# Security Configuration
# Replace with your public IP in CIDR format (e.g. "203.0.113.1/32").
# The setup script will append `/32` if you supply a bare IP.
my_ip = "YOUR_IP_ADDRESS"  # Replace with your actual IP address (CIDR will be added by setup.sh)

# Server Access
# Provide a secure password for the `server_password` variable (do NOT commit secrets).
# Example: server_password = "<REPLACE_WITH_SECURE_PASSWORD>"